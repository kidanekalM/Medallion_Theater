@model PerformanceDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medallion Theater</title>
    <link rel="stylesheet" href="./add.css">
</head>
<body>
    <div class="wrapper">
        <form action="" method="POST">
            <h1>Add Performance</h1>
            <div class="form-group">
                <label for="fname">Production Number</label>
                <input type="text" class="fname" name="production">
            </div>
            <div class="form-group">
                <label for="fname"> DateTime</label>
                <input type="datetime-local" class="fname" name="dateTime">
            </div>
            <div class="form-group">
                <label for="fname">Type</label>
                <input type="text" class="fname" name="Type">
            </div>

            <div class="actions">
                <input type="reset" value="Clear" class="btn_reset">
                <input type="submit" value="Add" class="btn primary">
            </div>
        </form>
    </div>
</body>
</html>