@model List<Reservation>
<div class="container">
    <h2>Production List</h2>
    <div class="form-group">
        <a href="/Reservation/Reserve" class="btn btn-primary m-3" style="background-color:orange;">Reserve</a>
        @* <input type="text" class="form-control w-25" id="searchInput" placeholder="Search by name"> *@
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Patron</th>
                <th>Performance</th>
                <th>Seat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var res in Model)
            {
                <tr>
                    <td>@res.TicketId</td>
                    <td>@res.Patron.FirstName</td>
                    <td> @res.performance.production.Name at @res.performance.dateTime  </td>
                    <td> @res.seats[0].Section@res.seats[0].Number</td>
                    @* <td><a href="Reservat/Details/@prod.Id" class="">Details</a></td> *@
                </tr>
            }

            <!-- Add more rows for additional students -->
        </tbody>
    </table>
</div>
@{
}
